<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body class="container">
    <header>
        <h1 class="title is-1">
            Mis Proyectos
        </h1>
    </header>
    
    <div class="columns">
        <div class="column">
            Nombre
        </div>
        <div class="column">
            Código
        </div>
        <div class="column">
            Presupuesto
        </div>
        <div class="column">
            Acciones
        </div>
    </div>

    <% for(let i=0; i<projects.length; i++) { %>
        <div class="columns ">
            <div class="column"><%= projects[i].name %></div>
            <div class="column"><%= projects[i].code %></div>
            <div class="column"><%= projects[i].budget  %></div>

            <div class="column">
                <a class="button is-primary" href="/projects/<%= projects[i]._id %>">
                    Informe
                </a>
            </div>
            <div id="modal-cost-<%= projects[i].code %>" class="modal">
                <div class="modal-background"></div>
                
                <div class="modal-content">
                    <div class="box">
                    <form class="is-half" method="post" action="/projects/<%= projects[i]._id %>/costs" enctype="application/x-www-form-urlencoded">
                        <label class="label">Coste</label>
                        <input 
                            class="input"
                            type="text" 
                            name="name"  
                        >
                        <label class="label">Presupuesto</label>
                        <input 
                            class="input"
                            type="number" 
                            name="cost"  
                        >
                        <button class="button is-primary is-light">Añadir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% } %>



    <script src="scripts/projects.js"></script>
</body>
</html>